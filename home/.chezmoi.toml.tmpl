[git]
autoCommit = true
autoPush = true
[merge]
command = "bash"
args = [
    "-c",
    "cp {{ .Target }} {{ .Target }}.base && code --new-window --wait --merge {{ .Destination }} {{ .Target }} {{ .Target }}.base {{ .Source }}",
]
[diff]
command = "code"
args = ["--wait", "--diff"]
[cd]
command = "zsh"
args = "--interactive"
